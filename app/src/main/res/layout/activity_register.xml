<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteStatic"
    tools:context=".RegisterActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEpostaKayit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        android:hint="E-posta adresiniz"
        android:padding="10dp"
        android:textColor="@color/colorTextGri"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etTelnoKayit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:inputType="phone"
        android:background="@drawable/edittext_background"
        android:hint="Telefon numaranız(Başında 0 olmadan)"
        android:padding="10dp"
        android:textColor="@color/colorTextGri"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="@+id/etAdSoyadKayit"
        app:layout_constraintStart_toStartOf="@+id/etAdSoyadKayit"
        app:layout_constraintTop_toBottomOf="@+id/etAdSoyadKayit" />

    <EditText
        android:id="@+id/etAdSoyadKayit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Adınız ve Soyadınız"
        android:padding="10dp"
        android:textColor="@color/colorTextGri"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="@+id/etEpostaKayit"
        app:layout_constraintStart_toStartOf="@+id/etEpostaKayit"
        app:layout_constraintTop_toBottomOf="@+id/etEpostaKayit" />

    <EditText
        android:id="@+id/etSifreKayit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Şifreniz"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorTextGri"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="@+id/etTelnoKayit"
        app:layout_constraintStart_toStartOf="@+id/etTelnoKayit"
        app:layout_constraintTop_toBottomOf="@+id/etTelnoKayit" />

    <EditText
        android:id="@+id/etSifreTekrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Şifrenizi tekrar giriniz"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorTextGri"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="@+id/etSifreKayit"
        app:layout_constraintStart_toStartOf="@+id/etSifreKayit"
        app:layout_constraintTop_toBottomOf="@+id/etSifreKayit" />

    <EditText
        android:id="@+id/etOnaykodu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_background"
        android:hint="Onay kodunuz"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorTextGri"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etSifreTekrar"
        app:layout_constraintTop_toBottomOf="@+id/etSifreTekrar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="*Onay kodunu yöneticinizden isteyiniz."
        android:textColor="@color/colorHint"
        app:layout_constraintStart_toStartOf="@+id/etOnaykodu"
        app:layout_constraintTop_toBottomOf="@+id/etOnaykodu" />

    <Button
        android:id="@+id/btnKayitol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button_background"
        android:text="Kayıt Ol"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="KAYIT OL"
        android:textColor="@color/colorHint"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvZatenHesabimVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Zaten hesabım var"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKayitol" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorText"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>